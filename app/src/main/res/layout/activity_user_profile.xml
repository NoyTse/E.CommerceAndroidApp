<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ochos.noytse.loginfacebook.UserProfileActivity"
    android:background="@color/userProfileActivityBackground">
<android.support.v7.widget.CardView
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    app:contentPadding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgUserPhoto"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/userdefaultimage" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/imgUserPhoto">

            <TextView
                android:id="@+id/lblUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:gravity="left"
                android:textAlignment="gravity"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/lblUserEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:textAlignment="gravity"
                android:text="example123456@gmail.com" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnSignOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/signup_btn_background"
        android:text = "Sign Out"/>
</RelativeLayout>
